{% extends "base.jinja2" %}
{% block content %}
        {% for post in posts %}
        <div class="post-block">
          <div class="article-header">
            <div class="article-title"><a href="{{ post.url }}" rel="bookmark">{{
            post.title }}</a></div>
            <p>
              <span class="date">{{ post.date }}</span>
              {% if post.tags %}
              -
              <span class="tags">
                {% for tag in post.tags %}
                {{ tag }},
                {% endfor %}
              </span>
              {% endif %}
            </p>
          </div>

          <div class="entry-content">
            {{ post['body'] }}
          </div>
        </div>
        {% endfor %}
      </section>
{% endblock %}
{% block pager %}{% endblock %}
